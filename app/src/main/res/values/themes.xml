<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/orange</item>

        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentSystemBars">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar.TransparentSystemBars">
        <item name="android:windowBackground">@drawable/journal_tinted</item>
    </style>

    <style name="AppTheme.Launcher">
        <!-- Show launch_screen while the app is loading -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
</resources>
